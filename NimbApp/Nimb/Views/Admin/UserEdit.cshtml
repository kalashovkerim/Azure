@model NimbRepository.Model.Admin.User
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    int _id = Model.Id;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="/css/Addstyle.css" rel="stylesheet" type="text/css" />

    <title>Document</title>
</head>
<body>
    <div class="container">
        <form asp-controller="Admin" asp-action="UserAdd" class="bg">
            <div class="header">
                <label>User @_id</label>
            </div>
            <div class="userdata">
                <input asp-for="FirstName" class="propfield" placeholder="Name" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
                <input asp-for="LastName" class="propfield" placeholder="Surname" />
                <span asp-validation-for="LastName" class="text-danger"></span>
                <input asp-for="PatronymicName" class="propfield" placeholder="PatronymicName" />
                <span asp-validation-for="PatronymicName" class="text-danger"></span>
                <input asp-for="Login" class="propfield" placeholder="Login" />
                <span asp-validation-for="Login" class="text-danger"></span>
                <input asp-for="Password" class="propfield" placeholder="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
                <input type="number" asp-for="Number" class="propfield" placeholder="Number" />
                <span asp-validation-for="Number" class="text-danger"></span>
                <input asp-for="EmailAddress" class="propfield" placeholder="Email" />
                <span asp-validation-for="EmailAddress" class="text-danger"></span>
                <input asp-for="Address" class="propfield" placeholder="Address" />
                <span asp-validation-for="Address" class="text-danger"></span>
                <select asp-for="Position" class="propbox">
                    <option value="" disabled selected>Select user's position</option>
                    <option value="Chief">Chief</option>
                    <option value="Storekeeper">Storekeeper</option>
                    <option value="Seller">Seller</option>
                    <option value="Economist">Economist</option>
                </select>
                <span asp-validation-for="Position" class="text-danger"></span>
            </div>
            <div class="controlbtns">
                <button asp-controller="Admin" asp-action="AdminPanel" class="ctrl back"><p>Back</p></button>
                <button asp-controller="Admin" asp-action="UserEditConfirm" type="submit" class="ctrl confirm"><p>Confirm</p></button>
            </div>
        </form>
    </div>
</body>
<script defer src="/js/﻿adminscript.js"></script>
</html>