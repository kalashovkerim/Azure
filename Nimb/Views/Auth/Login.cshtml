@{
}

<link href="~/css/Authorization/Authstyle.css" rel="stylesheet" type="text/css" />


<title>Authorization</title>

<body>
    <div class="container">
        <div class="main">
            <div class="bg">
                <div class="header">
                    <h1 class="nimbLabel">Nimb</h1>
                </div>

                <span class="text-danger"></span>

                <form asp-controller="Auth" asp-action="Login" method="post">
                    <div class="loginpart">
                        <input required asp-for="UserName" class="loginfield" id="loginfield" placeholder="Enter name..."></input>
                    </div>
                    <div class="passwordpart">
                        <input required asp-for="Password" class="passwordfield" id="passwordfield" type="password" placeholder="Enter a password..."></input>
                    </div>
                    <button class="signInbtn" value="Login" type="submit">Sign In</button>
                </form>
            </div>
        </div>
        <div class="links">
            <p>© 2023 - Nimb, Inc.</p>
        </div>
    </div>
</body>
