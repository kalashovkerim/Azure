@model IEnumerable<NimbRepository.Model.Admin.User>

@section Styles {
    <link href="/css/Admin/Adminstyle.css" rel="stylesheet" type="text/css" />
}
    

    <div class="container">
        <div class="userscontrol">
            <div class="searchpart">
                <input class="searchfield" placeholder="Name" />
                <button class="searchbtn"><p>Search</p></button>
            </div>
            <div class="userslist">
                <div class="tbl-header">
                    <table cellpadding="0" cellspacing="0">
                        <thead>
                            <tr id="headtr">
                                <th>Name</th>
                                <th>Surname</th>
                                <th>PatronymicName</th>
                                <th>Number</th>
                                <th>Email</th>
                                <th>Adress</th>
                                <th>Position</th>
                            </tr>
                        </thead>
                    </table>
                </div>
                <div class="tbl-content">
                    <table cellpadding="0" cellspacing="0">
                        <tbody>
                            @{
                                foreach (var user in Model)
                                {
                                    <tr id=@user.Id>
                                        <td>@user.FirstName</td>
                                        <td>@user.LastName</td>
                                        <td>@user.PatronymicName</td>
                                        <td>@user.Number</td>
                                        <td>@user.EmailAddress</td>
                                        <td>@user.Address</td>
                                        <td>@user.Position</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <form class="controlbtns">
                <button asp-controller="Admin" asp-action="UserAdd" class="ctrl add"><p>Add</p></button>
                <div type="button" class="ctrl Edit"><p>Edit</p></div>
                <div type="button" class="ctrl Delete"><p>Delete</p></div>
            </form>
        </div>
    </div>

@section Scripts {
    <script defer src="/js/adminscript.js"></script>
}

