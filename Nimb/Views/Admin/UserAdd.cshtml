<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="/css/Admin/Addstyle.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/css/intlTelInput.css" />

    <script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/intlTelInput.min.js"></script>
    <script defer src="~/js/useradd.js"></script>

    <script defer src="~/js/toast.js"></script>
    <title>Document</title>
</head>
<body>
    <div class="container">
        <form asp-controller="Admin" asp-action="UserAdd" class="bg">
            <div class="header">
                <label>User Add</label>
            </div>
            <div class="userdata">
                <input asp-for="FirstName" class="propfield" placeholder="Name"/>
                <span asp-validation-for="FirstName" class="text-danger"></span>
                <input asp-for="LastName" class="propfield" placeholder="Surname" />
                <span asp-validation-for="LastName" class="text-danger"></span>
                <input asp-for="PatronymicName" class="propfield" placeholder="PatronymicName" />
                <span asp-validation-for="PatronymicName" class="text-danger"></span>
                <input id="phone" type="tel" asp-for="Number" class="propfield" placeholder="Number" />
                <span asp-validation-for="Number" class="text-danger"></span>
                <input asp-for="EmailAddress" class="propfield" placeholder="Email" />
                <span asp-validation-for="EmailAddress" class="text-danger"></span>
                <input asp-for="Address"  class="propfield" placeholder="Address"/>
                <span asp-validation-for="Address" class="text-danger"></span><div class="alert alert-info" style="display: none;"></div>
                <select asp-for="Position" class="propbox">
                    <option value="" disabled selected>Select user's position</option>
                    <option value="Chief">Chief</option><div class="alert alert-info" style="display: none;"></div>
                    <option value="Storekeeper">Storekeeper</option>
                    <option value="Seller">Seller</option>
                    <option value="Economist">Economist</option>
                </select>
                <span asp-validation-for="Position" class="text-danger"></span>
            </div>
            <div class="controlbtns">
                <button asp-controller="Admin" asp-action="AdminPanel" class="ctrl back"><p>Back</p></button>
                <button type="submit" class="ctrl confirm"><p>Confirm</p></button>
            </div>
        </form>
        <div class="alert alert-info" style="display: none;"></div>
        <script>
            const phoneInputField = document.querySelector("#phone");
            const phoneInput = window.intlTelInput(phoneInputField, {
                utilsScript:
                    "https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/utils.js",
            });
        </script>
    </div>

    <button id="toastBtn">Show Toast </button>

    <div class="toastdiv" aria-live="polite" aria-atomic="true">
        <div id="toastContainer" class="toast" style="position: absolute; top: 0; right: 0;">
            <div class="toast-header">
                <strong class="mr-auto">Bootstrap</strong>
                <small>11 mins ago</small>
                <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        </div>
    </div>
</body>

</html>