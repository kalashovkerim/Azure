@using NimbRepository.Model.Storekeeper;
@model Nimb.Models.ProductViewModel;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    IEnumerable<Supplier>? supplierList = ViewData["Suppliers"] as IEnumerable<Supplier>;
}

<link href="~/css/Storekeeper/keeperproduct.css" rel="stylesheet">




<div class="container">
    <div class="main">
        <div class="bg">
            <div class="header-container">
                <div class="header">Add product</div>
            </div>
            <form asp-action="AddProduct" asp-controller="StoreKeeper">
                <div class="inputs">
                    <select required class="supplierBox" asp-for=SuppId id="suppselectid">
                        <option selected>Choose a supplier</option>
                        @foreach (var item in supplierList!)
                        {
                            <option value=@item.Id>@Html.DisplayFor(items => item.Name)</option>
                        }
                    </select>
                    <div class="namePart">
                        <input required type="text" asp-for="Good.Name" class="nameField" id="nameField" placeholder="Enter name">
                    </div>
                    <div class="categoryPart">
                        <input required type="text" asp-for="Good.Category" class="categoryField" id="categoryField" placeholder="Enter the category">
                    </div>
                    <div class="pricePart">
                        <input required type="number" asp-for="Good.PurchasePrice" class="priceField" id="priceField" placeholder="Enter the purchase price">
                    </div>
                    <div class="pricePart">
                        <input required type="number" asp-for="Good.Rate" class="priceField" id="priceField" placeholder="Enter the rate">
                    </div>
                    <div class="countPart">
                        <input required type="number" asp-for="Good.Count" class="countField" id="countField" placeholder="Enter the count">
                    </div>
                    <div class="descPart">
                        <textarea required class="descField" asp-for="Good.Description" id="descField" placeholder="Enter the description"></textarea>
                    </div>
                </div>
                <button class="applyButton" type="submit"><p>Apply</p></button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script defer src="/js/keeper.js"></script>
}
