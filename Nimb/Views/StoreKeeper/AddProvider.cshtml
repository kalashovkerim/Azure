@model NimbRepository.Model.Storekeeper.Supplier
@{
}
<link href="~/css/Storekeeper/keeperstyle.css" rel="stylesheet">

<body>
    <div class="container">
        <div class="bg">
            <div class="header"><p>Add Provider</p></div>
            <form asp-controller="StoreKeeper" asp-action="AddProvider">
                <input asp-for="Name" placeholder="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
                <input asp-for="Number" placeholder="Number" />
                <span asp-validation-for="Number" class="text-danger"></span>
                <input asp-for="Address" placeholder ="Adress" />
                <span asp-validation-for="Address" class="text-danger"></span>
                <input asp-for="EmailAddress" placeholder="Email" />
                <span asp-validation-for="EmailAddress" class="text-danger"></span>
                <button type="submit"><p>Confirm</p></button>
            </form>
        </div>
    </div>
</body>